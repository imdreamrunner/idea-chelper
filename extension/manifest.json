{
    "manifest_version": 2,

    "name": "CHelper extension",
    "description": "Allows to parse tasks directly from browser.",
    "background": { "scripts": ["background.js"] },
    "version": "1.0.4",

    "permissions": [
        "tabs",
        "http://localhost/"
    ],

    "content_scripts": [
        {
            "matches": [
                "http://*.contest.yandex.ru/*",
                "http://*.contest.yandex.com/*",
                "http://*.contest2.yandex.ru/*",
                "http://*.contest2.yandex.com/*",
                "http://codeforces.ru/*",
                "http://codeforces.com/*",
                "https://hackerrank.com/*",
                "https://www.hackerrank.com/*"
            ],
            "js": ["contentscript.js"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],

    "page_action": {
        "default_icon": "newTask.png",
        "default_title": "Parse task"
    },

    "icons": { "16": "newTask16.png"}
}
